<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <!--Google fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&family=Poppins:wght@700&display=swap"
        rel="stylesheet">

    <!-- Materialice CSS-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <!--Icons-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <meta charset="utf-8">
    <title>Rescate de Patitas</title>
</head>

<body>
    <nav>
        <div class="nav-wrapper purple darken-4">
            <a href="/" class="brand-logo">Rescate de patitas</a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
                <li><a href="sass.html">Mascotas buscando due√±o</a></li>
                <li><a href="badges.html">Mascotas perdidas</a></li>
                <li><a href="collapsible.html">Quiero adoptar</a></li>
            </ul>
        </div>
    </nav>
    <br />
    <br />
    <div class="container">
        <div class="row">

            <div class="col s12 m6">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        <form action="/usuario/{{usuario.id}}/editar_atributo/{{atributo.id}}" method="post">
                            <div class="row">
                                <div class="col s12">
                                    <span class="card-title">Pregunta de
                                        {{#with atributo}}
                                        {{#eq tipoDeRegistro.nombre "registro_de_mascota"}}
                                        registro de mascotas
                                        {{/eq}}
                                        {{#eq tipoDeRegistro.nombre "rescate"}}
                                        rescate
                                        {{/eq}}
                                        {{#eq tipoDeRegistro.nombre "adopcion"}}
                                        adopcion
                                        {{/eq}}
                                        {{/with}}
                                    </span>
                                </div>
                                <div class="col s12">
                                    <div class="input-field col s12">
                                        <input id="caracteristica" type="text" class="validate" name="caracteristica"
                                            value="{{atributo.caracteristicaNombre}}">
                                        <label for="caracteristica">Nombre del atributo</label>
                                    </div>
                                </div>
                                {{#eq atributo.tipoDePregunta.nombre "boolean"}}

                                <div class="col s12">
                                    <div class="col s12">
                                        <div class="input-field col s12">
                                            <select class="browser-default" disabled id="forma_de_pregunta">
                                                <option value="" disabled selected>Boolean</option>
                                            </select>
                                            <!--<label for="forma_de_pregunta" >Forma de pregunta</label>-->
                                        </div>
                                    </div>
                                </div>
                                {{/eq}}
                                {{#eq atributo.tipoDePregunta.nombre "multiple_choice"}}
                                {{#each atributo.opciones}}
                                <div class="input-field col s12">
                                    <input id="opcion_{{id}}" type="text" class="validate" name="opcion_{{id}}"
                                        value="{{nombreOpcion}}">
                                </div>
                                {{/each}}
                                {{/eq}}
                                {{#eq atributo.tipoDePregunta.nombre "multiple_choice"}}
                                {{/eq}}

                            </div>
                            <div class="card-action">


                                <button class="btn waves-effect waves-light" type="submit">Ok
                                    <i class="material-icons right">send</i>
                                </button>


                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>


    </div>
    <!-- Custom js-->

    <link rel="stylesheet" href="./css/styles.css">

</body>

</html>